<h1>Register</h1>

<form method='POST' action='/register'>
    <div>
        <label>Name</label>
        <input type='string' name='name'/>
    </div>
    <div>
        <label>Email</label>
        <input type='string' name='email'/>
    </div>
    <div>
        <label>Password</label>
        <input type='password' name='password'/>
    </div>
    <input type='submit' value='Register'/>
</form>